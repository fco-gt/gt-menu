generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Tenant {
  id        String       @id @default(cuid())
  name      String
  slug      String       @unique
  menus     Menu[]
  members   Membership[]
  createdAt DateTime     @default(now())
}

model Membership {
  id          String   @id @default(cuid())
  tenant      Tenant   @relation(fields: [tenantId], references: [id])
  tenantId    String
  clerkUserId String
  role        Role     @default(EDITOR)
  createdAt   DateTime @default(now())

  @@unique([tenantId, clerkUserId])
  @@index([clerkUserId])
}

enum Role {
  OWNER
  ADMIN
  EDITOR
}

model Menu {
  id        String        @id @default(cuid())
  tenant    Tenant        @relation(fields: [tenantId], references: [id])
  tenantId  String
  publicId  String        @unique
  versions  MenuVersion[]
  createdAt DateTime      @default(now())

  @@index([tenantId])
}

model MenuVersion {
  id        String   @id @default(cuid())
  menu      Menu     @relation(fields: [menuId], references: [id])
  menuId    String
  name      String
  published Boolean  @default(false)
  items     Item[]
  createdAt DateTime @default(now())

  @@index([menuId, published])
}

model Item {
  id          String      @id @default(cuid())
  version     MenuVersion @relation(fields: [versionId], references: [id])
  versionId   String
  title       String
  description String?
  priceCents  Int
  order       Int
  state       ItemState   @default(ACTIVE)

  @@index([versionId, state])
}

enum ItemState {
  ACTIVE
  OUT_OF_STOCK
  HIDDEN
}
